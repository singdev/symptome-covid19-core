extends layout


block content
    div(class="ribbon")
        img(src="/images/drapeau_du_gabon.png", alt="Drapeau du gabon" class="drapeau-gabon")
        h3 Centre Opérationnel de Risposte aux Epidémies

    div(class=" main-container mdl-grid")
        form(action="/users/auth", method="post" class="login-form mdl-color--white mdl-shadow--4dp content mdl-color-text--grey-800 mdl-cell mdl-cell--8-col")
            h4 Suivi journalier des contacts de Covid-19
            div(class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label")
                input(class="mdl-textfield__input" type="text" name="username" id="username")
                label(class="mdl-textfield__label" for="username") Identifiant

            div(class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label")
                input(class="mdl-textfield__input" type="password" name="password" id="password")
                label(class="mdl-textfield__label" for="password") Mot de passe
        
            button(class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--primary") Se connecter

    footer(class="demo-footer mdl-mini-footer")
        div(class="mdl-mini-footer--left-section")
            ul(class="mdl-mini-footer--link-list")
                li 
                    a(href="https://www.sing.ga") Développé par SING SA
